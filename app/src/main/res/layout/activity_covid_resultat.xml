<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >




        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Diagnostic TerminÃ©!"
                android:id="@+id/titre"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="19sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imagealert"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/line1"
            android:visibility="gone"
            android:contentDescription="TODO" />
        <LinearLayout
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/imagealert"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alertmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="25dp"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/messageap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:visibility="gone">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">


            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Reprendre"
                android:id="@+id/btnRestart"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAllCaps="false"
                android:background="@drawable/covidbackground_btn"
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" />


            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Quitter"
                android:textAllCaps="false"
                android:id="@+id/btnexit"
                android:layout_marginStart="10dp"

                android:background="@drawable/covidbackground_btn"
                android:textColor="#ffffff" />



        </LinearLayout>





    </RelativeLayout>


</ScrollView>
